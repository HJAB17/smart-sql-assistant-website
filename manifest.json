{
   "manifest_version": 3,
  "name": "Smart SQL Assistant",
  "version": "1.0.0",
  "description": "Formatez votre SQL en quelques secondes avec des conseils d'optimisation instantan√©s",
  "permissions": ["activeTab", "storage", "contextMenus"],
    "icons": {
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "SQL Formatter"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
